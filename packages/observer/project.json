{
  "name": "observer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/observer/src",
  "projectType": "library",
  "targets": {
    "api": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx @openapitools/openapi-generator-cli generate -g typescript-axios -i https://api.observer1.dev.trustcerts.de/api-json -o src/lib --api-name-suffix=ObserverApi --additional-properties=supportsES6=true,enumPropertyNaming=original,enumNameSuffix="
      }
    },
    "build": {
      "executor": "@nrwl/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/observer",
        "main": "packages/observer/src/index.ts",
        "tsConfig": "packages/observer/tsconfig.lib.json",
        "assets": [],
        "project": "packages/observer/package.json",
        "compiler": "swc",
        "format": ["cjs", "esm"],
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "pre-publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/pre-publish.mjs observer {args.ver} {args.tag}"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs observer {args.ver} {args.tag}"
      },
      "dependsOn": [
        {
          "projects": "self",
          "params": "forward",
          "target": "pre-publish"
        },
        {
          "projects": "self",
          "params": "ignore",
          "target": "build"
        }
      ]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/observer/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/observer/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
